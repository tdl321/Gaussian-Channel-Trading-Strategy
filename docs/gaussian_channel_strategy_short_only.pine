//@version=6
strategy(title="Gaussian Channel Strategy - Short Only", overlay=true, initial_capital=10000, default_qty_type=strategy.percent_of_equity, default_qty_value=65, pyramiding=5, commission_type=strategy.commission.percent, commission_value=0.1, slippage=1, calc_on_every_tick=false, fill_orders_on_standard_ohlc=true)

// === INPUTS ===
// Date Range Filter
startDate = input.time(timestamp("2018-01-01 00:00"), title="Start Date")
endDate = input.time(timestamp("2069-12-31 00:00"), title="End Date")

// Channel Controls
src = input(hlc3, title="Source")
N = input.int(4, title="Poles", minval=1, maxval=9)
per = input.int(144, title="Sampling Period", minval=2)
mult = input.float(1.414, title="Filtered True Range Multiplier", minval=0)

// Optional Controls
modeLag = input.bool(false, title="Reduced Lag Mode")
modeFast = input.bool(false, title="Fast Response Mode")

// Pyramiding Controls
atrSpacing = input.float(0.4, title="ATR Spacing Between Entries", minval=0.1, maxval=3.0)

// Short Take Profit Control
shortTakeProfitPercent = input.float(10.0, title="Short Take Profit (%)", minval=1.0, maxval=50.0, step=0.5)

// === ATR AND PYRAMIDING VARIABLES ===
atr = ta.atr(14)  // Standard 14-day ATR
var float lastEntryPrice = na

// === GAUSSIAN CHANNEL FUNCTIONS (Pine Script v6) ===
// Filter function - courtesy of @e2e4mfck, converted to v6
f_filt9x(_a, _s, _i) => 
    var int _m2 = 0, var int _m3 = 0, var int _m4 = 0, var int _m5 = 0, var int _m6 = 0
    var int _m7 = 0, var int _m8 = 0, var int _m9 = 0, var float _f = 0.0
    _x = (1 - _a)
    // Weights. 
    // Initial weight _m1 is a pole number and equal to _i
    _m2 := _i == 9 ? 36  : _i == 8 ? 28 : _i == 7 ? 21 : _i == 6 ? 15 : _i == 5 ? 10 : _i == 4 ? 6 : _i == 3 ? 3 : _i == 2 ? 1 : 0
    _m3 := _i == 9 ? 84  : _i == 8 ? 56 : _i == 7 ? 35 : _i == 6 ? 20 : _i == 5 ? 10 : _i == 4 ? 4 : _i == 3 ? 1 : 0
    _m4 := _i == 9 ? 126 : _i == 8 ? 70 : _i == 7 ? 35 : _i == 6 ? 15 : _i == 5 ? 5  : _i == 4 ? 1 : 0
    _m5 := _i == 9 ? 126 : _i == 8 ? 56 : _i == 7 ? 21 : _i == 6 ? 6  : _i == 5 ? 1  : 0 
    _m6 := _i == 9 ? 84  : _i == 8 ? 28 : _i == 7 ? 7  : _i == 6 ? 1  : 0 
    _m7 := _i == 9 ? 36  : _i == 8 ? 8  : _i == 7 ? 1  : 0 
    _m8 := _i == 9 ? 9   : _i == 8 ? 1  : 0 
    _m9 := _i == 9 ? 1   : 0
    // filter
    _f :=   math.pow(_a, _i) * nz(_s) + 
      _i  *     _x      * nz(_f[1])      - (_i >= 2 ? 
      _m2 * math.pow(_x, 2)  * nz(_f[2]) : 0) + (_i >= 3 ? 
      _m3 * math.pow(_x, 3)  * nz(_f[3]) : 0) - (_i >= 4 ? 
      _m4 * math.pow(_x, 4)  * nz(_f[4]) : 0) + (_i >= 5 ? 
      _m5 * math.pow(_x, 5)  * nz(_f[5]) : 0) - (_i >= 6 ? 
      _m6 * math.pow(_x, 6)  * nz(_f[6]) : 0) + (_i >= 7 ? 
      _m7 * math.pow(_x, 7)  * nz(_f[7]) : 0) - (_i >= 8 ? 
      _m8 * math.pow(_x, 8)  * nz(_f[8]) : 0) + (_i == 9 ? 
      _m9 * math.pow(_x, 9)  * nz(_f[9]) : 0)

// 9 var declaration fun
f_pole(_a, _s, _i) =>
    _f1 =            f_filt9x(_a, _s, 1)
    _f2 = (_i >= 2 ? f_filt9x(_a, _s, 2) : 0)
    _f3 = (_i >= 3 ? f_filt9x(_a, _s, 3) : 0)
    _f4 = (_i >= 4 ? f_filt9x(_a, _s, 4) : 0)
    _f5 = (_i >= 5 ? f_filt9x(_a, _s, 5) : 0)
    _f6 = (_i >= 6 ? f_filt9x(_a, _s, 6) : 0)
    _f7 = (_i >= 7 ? f_filt9x(_a, _s, 7) : 0)
    _f8 = (_i >= 8 ? f_filt9x(_a, _s, 8) : 0)
    _f9 = (_i == 9 ? f_filt9x(_a, _s, 9) : 0)
    _fn = _i == 1 ? _f1 : _i == 2 ? _f2 : _i == 3 ? _f3 :
      _i == 4     ? _f4 : _i == 5 ? _f5 : _i == 6 ? _f6 :
      _i == 7     ? _f7 : _i == 8 ? _f8 : _i == 9 ? _f9 : na
    [_fn, _f1]

// === GAUSSIAN CHANNEL CALCULATIONS ===
// Beta and Alpha Components
beta  = (1 - math.cos(4*math.asin(1)/per)) / (math.pow(1.414, 2/N) - 1)
alpha = - beta + math.sqrt(math.pow(beta, 2) + 2*beta)

// Lag
lag = (per - 1)/(2*N)

// Data (NON-REPAINTING - use confirmed bars for plotting and exits)
src_confirmed = hlc3[1]  // Use previous bar's hlc3
tr_confirmed = ta.tr(true)[1]  // Use previous bar's true range
srcdata = modeLag ? src_confirmed + (src_confirmed - src_confirmed[lag]) : src_confirmed
trdata  = modeLag ? tr_confirmed + (tr_confirmed - tr_confirmed[lag]) : tr_confirmed

// Filtered Values (confirmed for plotting)
[filtn, filt1]     = f_pole(alpha, srcdata, N)
[filtntr, filt1tr] = f_pole(alpha, trdata,  N)

// Lag Reduction
filt   = modeFast ? (filtn + filt1)/2 : filtn
filttr = modeFast ? (filtntr + filt1tr)/2 : filtntr

// Bands (confirmed for plotting and exits)
hband = filt + filttr*mult
lband = filt - filttr*mult

// Channel color
fcolor = filt > filt[1] ? color.new(#0aff68, 0) : color.new(#ff0a5a, 0)
greenChannel = filt > filt[1]

// === REAL-TIME CHANNEL CALCULATIONS (for entries) ===
// Calculate current bar's channel for true 0-bar delay entries
src_current = hlc3
tr_current = ta.tr(true)

// Current bar data processing
srcdata_current = modeLag ? src_current + (src_current - src_current[lag]) : src_current
trdata_current  = modeLag ? tr_current + (tr_current - tr_current[lag]) : tr_current

// Current bar filtered values
[filtn_current, filt1_current]     = f_pole(alpha, srcdata_current, N)
[filtntr_current, filt1tr_current] = f_pole(alpha, trdata_current,  N)

// Current bar lag reduction
filt_current   = modeFast ? (filtn_current + filt1_current)/2 : filtn_current
filttr_current = modeFast ? (filtntr_current + filt1tr_current)/2 : filtntr_current

// Current bar bands (for entries)
hband_realtime = filt_current + filttr_current*mult
lband_realtime = filt_current - filttr_current*mult

// Current bar channel color
greenChannel_realtime = filt_current > filt_current[1]

// === DATE RANGE FILTER ===
inDateRange = time >= startDate and time <= endDate

// === ENTRY AND EXIT CONDITIONS ===
// Ensure sufficient data for Gaussian Channel calculation and market structure
sufficientData = bar_index >= (per + 25)

// Short entry: Current bar close below lower band (short only)
shortEntry = close < lband_realtime and inDateRange and sufficientData

// Base entry conditions - only short positions allowed
baseShortCondition = shortEntry and strategy.position_size == 0

// Pyramiding conditions - only add to existing short positions
atrDistanceFromLastEntry = na(lastEntryPrice) ? 0 : (open - lastEntryPrice) / atr
canPyramidShort = strategy.position_size < 0 and atrDistanceFromLastEntry >= atrSpacing and shortEntry

// Combined entry logic - short only
shortCondition = baseShortCondition or canPyramidShort

// Short exit logic - take profit based on price drop
var float shortEntryPrice = na
var float shortTakeProfitPrice = na

// Calculate short take profit price when entering short position
if shortCondition
    shortEntryPrice := close
    shortTakeProfitPrice := close * (1 - shortTakeProfitPercent / 100)  // Price drops by shortTakeProfitPercent%

// Exit short when price reaches take profit level
shortExitCondition = close <= shortTakeProfitPrice and not na(shortTakeProfitPrice)

// === STRATEGY EXECUTION ===
if shortCondition
    strategy.entry("Short", strategy.short, alert_message="short_entry")
    lastEntryPrice := open  // Track entry price for potential future pyramiding

// Exit short positions
if shortExitCondition and strategy.position_size < 0
    strategy.close("Short", alert_message="short_exit")
    lastEntryPrice := na  // Reset for next trade sequence
    shortEntryPrice := na  // Reset short variables
    shortTakeProfitPrice := na

// Stop loss for short positions at lower band
if strategy.position_size < 0 and close >= lband_realtime
    strategy.close("Short", alert_message="short_stop_loss")
    lastEntryPrice := na  // Reset for next trade sequence
    shortEntryPrice := na  // Reset short variables
    shortTakeProfitPrice := na

// === VISUALS ===
// Plot Filter and Bands
filtplot = plot(filt, title="Filter", color=fcolor, linewidth=3)
hbandplot = plot(hband, title="Filtered True Range High Band", color=fcolor)
lbandplot = plot(lband, title="Filtered True Range Low Band", color=fcolor)

// Channel Fill
channelFillColor = filt > filt[1] ? color.new(#0aff68, 80) : color.new(#ff0a5a, 80)
fill(hbandplot, lbandplot, title="Channel Fill", color=channelFillColor)

// === TABLE FOR STRATEGY INFO ===
if barstate.islast
    var table infoTable = table.new(position.top_right, 2, 9, bgcolor=color.white, border_width=1)
    table.cell(infoTable, 0, 0, "Strategy Info", text_color=color.black, bgcolor=color.gray)
    table.cell(infoTable, 1, 0, "Value", text_color=color.black, bgcolor=color.gray)
    table.cell(infoTable, 0, 1, "Filter", text_color=color.black)
    table.cell(infoTable, 1, 1, str.tostring(math.round(filt, 2)), text_color=color.black)
    table.cell(infoTable, 0, 2, "Upper Band", text_color=color.black)
    table.cell(infoTable, 1, 2, str.tostring(math.round(hband, 2)), text_color=color.black)
    table.cell(infoTable, 0, 3, "Lower Band", text_color=color.black)
    table.cell(infoTable, 1, 3, str.tostring(math.round(lband, 2)), text_color=color.black)
    table.cell(infoTable, 0, 4, "ATR(14)", text_color=color.black)
    table.cell(infoTable, 1, 4, str.tostring(math.round(atr, 2)), text_color=color.black)
    table.cell(infoTable, 0, 5, "Green Channel", text_color=color.black)
    table.cell(infoTable, 1, 5, greenChannel ? "✓" : "✗", text_color=greenChannel ? color.green : color.red)
    table.cell(infoTable, 0, 6, "Position", text_color=color.black)
    table.cell(infoTable, 1, 6, strategy.position_size < 0 ? "Short" : "Flat", text_color=strategy.position_size < 0 ? color.red : color.gray)
    table.cell(infoTable, 0, 7, "Last Entry", text_color=color.black)
    table.cell(infoTable, 1, 7, na(lastEntryPrice) ? "None" : str.tostring(math.round(lastEntryPrice, 2)), text_color=color.black)
    table.cell(infoTable, 0, 8, "In Date Range", text_color=color.black)
    table.cell(infoTable, 1, 8, inDateRange ? "✓" : "✗", text_color=inDateRange ? color.green : color.red) 